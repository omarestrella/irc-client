<div class="rooms">
    {{#each room in rooms}}
        <div class="room" {{action "setActiveRoom" room}}>
            {{room.channelName}}
        </div>
    {{/each}}
</div>

<div class="messages">
    <div class="message-container">
        {{#each message in roomMessages}}
            {{irc-message message=message}}
        {{/each}}
    </div>

    <div class="text-box">
        {{textarea value=currentMessage classNames="form-control"}}
    </div>
</div>
